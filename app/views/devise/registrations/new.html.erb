
<div class=" container  mt-5">
  <div class="box shadow-inner  mt-2 text-center" >
    <div class="fm ms-5">
      <h2 class="my-3 text-center">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:'rampal123@gmail.com..' %>
        </div>
        <div class="field">
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control",placeholder:'password(6 character minimum)'%>
        </div>
        <div class="field">
          <br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control",placeholder:'password confirmation' %>
        </div>
        <br>
        <div class="">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
