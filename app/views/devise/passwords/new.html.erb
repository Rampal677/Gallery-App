
<div class=" container  mt-5">
  <div class="box shadow-inner  mt-2" >
    <div class="fm ms-5">
      <h2 class=" my-3 text-center">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder:'rampal123@gmail.com..'%>
        </div>
        <div class="mt-1">
          <%= f.submit "request reset password instr." %>
        </div>
        <br>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

